source 'https://rubygems.org'

gem 'sinatra'                 # Web application framework
gem 'google-api-client'       # Google API client, including Calendar
gem 'googleauth'              # Handles Google OAuth2 authentication
gem 'sqlite3'                 # SQLite database integration
gem 'dotenv'                  # Load environment variables from .env file
gem 'sinatra-websocket'       # WebSocket support for real-time updates
gem 'rufus-scheduler'         # Scheduler for periodic tasks
gem 'json'                    # JSON parsing and generation
gem 'puma'